<!doctype html>

<%= partial "html" %>

  <head>
    <!-- Meta -->
    <%= partial "head/meta" %>

    <!-- Title -->
    <%= partial "head/title" %>

    <!-- Icons -->
    <%= partial "head/link" %>

    <!-- Stylesheets -->
    <%= partial "head/css" %>

    <!-- Javascripts -->
    <%= partial "head/js" %>
  </head>
  
  <body class="page <%= page_classes %>">

    <header class="header" role="banner">

      <div class="header__inner">

        <%! partial "components/toggle--navigation" %>

        <%! partial "components/logo" %>

        <%! partial "components/toggle--search" %>

        <%! partial "components/search" %>

      </div>

    </header>

    <%! partial "components/navigation--primary" %>

    <%= yield %>

    <footer class="footer" role="contentinfo">

      <div class="footer__inner">
      </div>

    </footer>

    <%= partial "foot/js" %>

  </body>
</html>
